---
const {
    title,
    price,
    benefits,
    color,
    colorText,
    colorBUtton,
    logoColor,
    hoverButton,
    textColorButton,
} = Astro.props;
import '@/styles/global.css';
---

<div
    style={`background-color: ${color}; --color-button: ${colorBUtton}; --hover-button: ${hoverButton};`}
    class="rounded-[60px] shadow-lg p-8 flex flex-col hover:animate-scale"
>
    <div
        class="mx-auto flex justify-center w-14 h-14 items-center bg-opacity-40 rounded-full mb-8 shadow-lg"
        style={`background-color: ${colorBUtton}`}
    >
        <svg
            width="462"
            height="249"
            viewBox="0 0 462 249"
            fill="none"
            class="w-10 h-10"
            xmlns="http://www.w3.org/2000/svg"
            style={`color: ${logoColor};`}
        >
            <path
                d="m243.406 248.313-18.989-37.974 18.989-18.99 18.984 18.99zM314.5 122.078v-18.151a25.7 25.7 0 0 0-6.766-.901c-14.255 0-25.817 11.557-25.817 25.818 0 14.255 11.562 25.817 25.817 25.817 14.261 0 25.818-11.562 25.818-25.817a25.7 25.7 0 0 0-.901-6.766zm-144.286 0v-18.151a25.7 25.7 0 0 1 6.765-.901c14.261 0 25.818 11.557 25.818 25.818 0 14.255-11.557 25.817-25.818 25.817-14.26 0-25.817-11.562-25.817-25.817 0-2.344.312-4.604.895-6.766z"
                fill={logoColor}></path>
            <path
                d="M323.073 194.635c-33.099 0-60.021-26.927-60.021-60.02 0-33.099 26.922-60.021 60.021-60.021 33.094 0 60.021 26.922 60.021 60.021 0 33.093-26.927 60.02-60.021 60.02M461.427 21.208c-46.12 30.401-138.354 33.47-138.354 33.47-44.078 0-79.938 35.859-79.938 79.937 0 44.073 35.86 79.932 79.938 79.932 44.073 0 79.932-35.859 79.932-79.932 0-21.167-8.281-40.422-21.76-54.735 50.708-16.4 80.182-58.672 80.182-58.672M138.354 215.844c-44.786 0-81.229-36.443-81.229-81.229 0-44.792 36.443-81.23 81.229-81.23 44.792 0 81.229 36.438 81.229 81.23 0 44.786-36.437 81.229-81.229 81.229m0-182.375S46.12 30.396 0 0c0 0 27.135 38.912 74.115 56.547-22.521 18.568-36.901 46.667-36.901 78.068 0 55.77 45.37 101.145 101.14 101.145S239.5 190.385 239.5 134.615c0-55.771-45.375-101.146-101.146-101.146"
                fill={logoColor}></path>
        </svg>
    </div>
    <h3
        class={`text-3xl text-[${colorText}] font-onest flex justify-center mb-6`}
        style="font-weight: 400;"
    >
        {title}
    </h3>
    <h1
        class={`text-3xl text-[${colorText}] font-inter flex justify-center mb-6`}
        style="font-weight: 800;"
    >
        {price}
    </h1>
    <p
        class={`text-lg text-[${colorText}] font-inter mx-auto flex justify-center max-w-[300px] mb-6`}
        style="font-weight: 400; text-align: center ;"
    >
        Todo lo que esta incluido en el plan staff:
    </p>
    <ul class="space-y-4">
        {
            benefits.map((benefit: string) => (
                <li class="flex items-center ">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class={`h-4 w-4 mr-2 text-[${colorText}]`}
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                        />
                    </svg>
                    <span
                        class={`font-onest text-sm text-[${colorText}]`}
                        style="font-weight: 500;"
                    >
                        {benefit}
                    </span>
                </li>
            ))
        }
    </ul>
    <button
        class={`text-2xl font-inter py-2 px-4 shadow-md rounded-full mt-8 text-[${textColorButton}] button-adquirir transition-colors duration-300`}
        >Adquirir</button
    >
</div>

<style>
    .button-adquirir {
        background-color: var(--color-button);
    }
    .button-adquirir:hover {
        background-color: var(--hover-button);
    }
    .button-adquirir {
        font-weight: 800;
    }
</style>
