<script>
    // Función para manejar el toggle
    function setupToggle(
        buttonId: string,
        contentId: string,
        arrowId: string
    ): void {
        const button = document.getElementById(
            buttonId
        ) as HTMLButtonElement | null;
        const content = document.getElementById(
            contentId
        ) as HTMLElement | null;
        const arrow = document.getElementById(arrowId) as HTMLElement | null;

        if (!button || !content || !arrow) {
            console.error(
                `Elementos con ID ${buttonId}, ${contentId}, o ${arrowId} no encontrados.`
            );
            return; // Evitar ejecutar el resto si falta algún elemento
        }

        button.addEventListener('click', () => {
            content.classList.toggle('hidden'); // Esto ya es seguro porque se validó antes
            arrow.classList.toggle('rotate-90');
        });
    }

    // Configurar toggles
    setupToggle('toggle-niveles', 'content-niveles', 'arrow-niveles');
    setupToggle('toggle-valor', 'content-valor', 'arrow-valor');
    setupToggle('toggle-precio', 'content-precio', 'arrow-precio');
</script>
