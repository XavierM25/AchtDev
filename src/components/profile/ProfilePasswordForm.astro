<div class="w-full max-w-md mx-auto space-y-6">
    <form class="space-y-4">
      <div>
        <label for="old-password" class="block text-sm font-medium text-gray-700">Contraseña anterior</label>
        <input
          type="password"
          id="old-password"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          placeholder="hola"
        />
      </div>
      <div>
        <label for="new-password" class="block text-sm font-medium text-gray-700">Contraseña nueva*</label>
        <input
          type="password"
          id="new-password"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          placeholder="hola2"
        />
      </div>
      <div>
        <label for="confirm-password" class="block text-sm font-medium text-gray-700">Confirmar nueva contraseña*</label>
        <input
          type="password"
          id="confirm-password"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          placeholder="hola2"
        />
      </div>
      <div class="flex justify-start">
        <button
          type="submit"
          class="px-6 py-2 text-pink-600 border border-pink-600 rounded-full hover:bg-pink-100 transition duration-200"
        >
          Guardar cambios
        </button>
      </div>
    </form>
  </div>
  