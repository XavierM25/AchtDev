<div class="w-full max-w-4xl mx-auto space-y-6">
    <form class="grid grid-cols-1 md:grid-cols-2 gap-4 items-center">
      <div>
        <label for="first-name" class="block text-sm font-medium text-gray-700">Nombres*</label>
        <input
          type="text"
          id="first-name"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="Alexander German"
        />
      </div>
      <div>
        <label for="last-name" class="block text-sm font-medium text-gray-700">Apellidos*</label>
        <input
          type="text"
          id="last-name"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="Inostroza Salinas"
        />
      </div>
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700">Usuario*</label>
        <input
          type="text"
          id="username"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="ainostrozasa"
        />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Correo electrónico*</label>
        <input
          type="email"
          id="email"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="ainostrozasa@gmail.com"
        />
      </div>
      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700">Número*</label>
        <input
          type="text"
          id="phone"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="999-999-999"
        />
      </div>
      <div>
        <label for="dob" class="block text-sm font-medium text-gray-700">Fecha de nacimiento*</label>
        <input
          type="date"
          id="dob"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm"
          value="2025-05-05"
        />
      </div>
      <div class="col-span-2 flex items-center justify-between">
        <div>
          <label class="block text-sm font-medium text-gray-700">Género*</label>
          <div class="flex items-center gap-4 mt-1">
            <label class="flex items-center">
              <input type="radio" name="gender" value="Masculino" class="mr-2" checked />
              Masculino
            </label>
            <label class="flex items-center">
              <input type="radio" name="gender" value="Femenino" class="mr-2" />
              Femenino
            </label>
            <label class="flex items-center">
              <input type="radio" name="gender" value="Otro" class="mr-2" />
              Otro
            </label>
          </div>
        </div>
        <button
          type="submit"
          class="px-6 py-2 text-pink-600 border border-pink-600 rounded-full hover:bg-pink-100 transition duration-200"
        >
          Guardar cambios
        </button>
      </div>
    </form>
  </div>
  