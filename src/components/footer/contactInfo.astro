---
interface Props {
    email: string;
    phone: string;
}

const { email, phone } = Astro.props;
---

<div
    class="text-xl flex items-center gap-14 font-manrope"
    style="font-weight: 500;"
>
    <a
        href={`mailto:${email}`}
        class="flex items-center gap-3 text-white hover:text-gray-200"
    >
        <img
            src="/icons/email.svg"
            alt="Email"
            class="bg-white rounded-full w-10 h-10 p-2"
        />
        <span>{email}</span>
    </a>
    <a
        href={`https://wa.me/${phone.replace(/\D/g, '')}`}
        class="flex items-center gap-3 text-white hover:text-gray-200"
    >
        <img src="/icons/phone.svg" alt="WhatsApp" class="w-10 h-10" />
        <span>{phone}</span>
    </a>
</div>
