---
import Layout from '../layouts/Layout.astro';
import HeaderNino from '@/components/headerNiños.astro';
import MainNino from '@/components/main/index_mainNiño.astro';
import CarruselNino from '@/components/main/index_carruselNiño.astro';
import PlanesNino from '@/components/planes/planesSectionNiño.astro';
import FAQNino from '@/components/main/index_FAQNiño.astro';
import FooterNino from '@/components/footer/footerNiño.astro';
import { VelocityScroll } from '@/components/ui/scroll-based-velocity';

import '@/styles/global.css';
---

<Layout>
    <HeaderNino />
    <div class="mt-20">
        <MainNino />
    </div>
    <div class="mt-20">
        <CarruselNino />
    </div>
    <div id="planes" class="mt-44">
        <PlanesNino />
    </div>
    <div class="mt-44">
        <section class="overflow-hidden w-full py-16 bg-[#60E6E6]">
            <VelocityScroll
                text="Educando con tecnología"
                default_velocity={5}
                className="font-onest text-center text-4xl font-bold tracking-[-0.05rem] text-[white] drop-shadow-sm dark:text-white md:text-7xl md:leading-[5rem]"
                client:load
            />
        </section>
    </div>
    <div id="faq" class="mt-44">
        <FAQNino />
    </div>
    <div class="mt-44">
        <FooterNino />
    </div>
</Layout>
